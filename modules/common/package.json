{
  "name": "@aragon/sdk-common",
  "author": "Aragon Association",
  "version": "1.7.0",
  "license": "MIT",
  "deprecated": "This package is deprecated. Please use @aragon/sdk-client-common instead.",
  "main": "dist/index.js",
  "module": "dist/sdk-common.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "yarn run clean && rollup --config rollup.config.ts --configPlugin typescript",
    "test": "TESTING=true jest --verbose",
    "lint": "eslint --ext .js,.ts",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "clean": "rm -Rf .turbo dist"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/sdk-common.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk-common.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/constants": "^5.7.0",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.9",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "ts-jest": "^29.1.1",
    "tslib": "^2.3.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {},
  "jest": {
    "preset": "ts-jest"
  }
}
