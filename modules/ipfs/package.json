{
  "name": "@aragon/sdk-ipfs",
  "author": "Aragon Association",
  "version": "1.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/sdk-ipfs.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "yarn run clean && rollup --config rollup.config.ts --configPlugin typescript",
    "test": "TESTING=true jest --verbose",
    "lint": "eslint --ext .js,.ts",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit",
    "clean": "rm -Rf .turbo dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/sdk-ipfs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk-ipfs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.9",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "ts-jest": "^29.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@web-std/fetch": "^4.1.0",
    "@web-std/file": "^3.0.2",
    "@web-std/form-data": "^3.0.2",
    "isomorphic-unfetch": "^3.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "./test-environment.ts"
  }
}
