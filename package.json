{
  "name": "@aragon/sdk",
  "version": "0.1.0",
  "description": "Aragon JS SDK",
  "repository": "https://github.com/aragon/sdk/tree/main",
  "author": "Aragon Association",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "modules/*"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 20000,
    "testEnvironment": "./test-environment.js"
  },
  "scripts": {
    "clean": "rm -Rf node_modules ./modules/*/node_modules ./modules/*/dist",
    "lint": "tsdx lint modules/*/src",
    "build": "yarn turbo run build",
    "test": "TESTING=true tsdx test --verbose",
    "docs:client": "jsdoc2md --files ./modules/client/src/*.ts --configure ./jsdoc2md.json > ./docs/client.md"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "ganache": "^7.1.0",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^7.1.1",
    "turbo": "^1.1.9"
  }
}
